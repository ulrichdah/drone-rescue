    <qt-opengl>
      <camera>
        <placement idx="0" position="0,0,100" look_at="0,0,0" up="-1,0,0" lens_focal_length="65" />
      </camera>
       <frame_grabbing directory="/home/docker/drone-rescue/sim/argos_simulation/log/"
                       base_name="frame_" 
                       format="png"
                       quality="100" /> 
      <user_functions label="buzz_qt" show_buzz_editor="false"/>
    </qt-opengl>
  </visualization> -->

</argos-configuration>
